<table class="primary friends-table">
  <thead>
    <th {{action "setSortBy" "firstName"}}>
      Name
    </th>
    <th {{action "setSortBy" "totalArticles"}}>
      Articles
    </th>
    <th>

    </th>
  </thead>
  <tbody>
    {{#each model as |friend|}}
      <tr>
        <td>
          {{link-to friend.fullName "articles" friend}}
        </td>
        <td>
          {{friend.totalArticles}}
        </td>
        <td>
          <a href="#" {{action "delete" friend}}>Delete</a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
